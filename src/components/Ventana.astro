<div id="meme" class="hidden">
  <div class="flex z-10 justify-center mt-20">
    <img
      src="https://img2.storyblok.com/0x0/filters:quality(90):format(webp)/f/140924/600x600/aad00e5081/404.jpg"
      width="450"
      height="450"
      class="absolute top-20"
    />
    <a
      class="text-white border rounded-3xl py-2 px-7 z-10 mt-[27rem] bg-black text-2xl hover:text-white hover:bg-[#e55139]"
      href="/">BACK TO HOME</a
    >
  </div>
</div>

<script>
  const ventana = document.getElementById("ventana");
  const meme = document.getElementById("meme");
  const x = document.getElementById("x");
  x.addEventListener("click", () => {
    ventana.classList.toggle("hidden");
    meme.classList.toggle("hidden");
  });

  const move = document.getElementById("divmove");

  move.onmousedown = function (event) {
    let shiftX = event.clientX - move.getBoundingClientRect().left;
    let shiftY = event.clientY - move.getBoundingClientRect().top;

    move.style.position = "absolute";
    move.style.zIndex = "5";

    moveAt(event.pageX, event.pageY);

    // mueve la pelota a las coordenadas (pageX, pageY)
    // tomando la posici√≥n inicial en cuenta
    function moveAt(pageX, pageY) {
      move.style.left = pageX - shiftX + "px";
      move.style.top = pageY - shiftY + "px";
    }

    function onMouseMove(event) {
      moveAt(event.pageX, event.pageY);
    }

    // mueve la pelota con mousemove
    document.addEventListener("mousemove", onMouseMove);

    // suelta la pelota, elimina el manejador innecesario
    move.onmouseup = function () {
      document.removeEventListener("mousemove", onMouseMove);
      move.onmouseup = null;
    };
  };

  move.ondragstart = function () {
    return false;
  };
</script>
