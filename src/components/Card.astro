---
const {
  img = "src/assets/randomHEX.png",
  title = "title",
  desciption = "description",
  href = "link",
} = Astro.props;
---

<section
  class="w-auto h-auto border border-solid border-gray-700 rounded-3xl p-5 overflow-hidden text-white bg-[#1d1c20]"
>
  <a href={href}>
    <div class="flex flex-col gap-5">
      <h3 class="font-extrabold text-2xl">{title}</h3>
      <p class="font-light flex flex-wrap">{desciption}</p>
      <img
        src={img}
        alt=""
        class="h-72 hover:scale-105 rounded-3xl object-cover w-full"
      />
    </div>
  </a>
</section>
